<h1>New Item</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= form_with(url: uploads_path, local: true, multipart: true, html: { class: 'form' }) do |form| %>
          <div class="form-group">
            <%= form.label :file %>
            <%= form.file_field :file, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.submit "Upload and Process", class: 'btn btn-primary' %>
            <%= link_to "View Users", uploads_path, class: "btn btn-primary" %>

          </div>
          <% end %>
          
          <% if flash[:notice].present? %>
          <div class="alert alert-success">
            <p><%= flash[:notice] %></p>
          </div>
          <% end %>

          <% if flash[:alert].present? %>
          <div class="alert alert-danger">
            <p><%= flash[:alert] %></p>
          </div>
          <% end %>

          <% if flash[:failure_reasons].present? %>
          <div class="alert alert-warning">
            <h3>Failure Reasons:</h3>
            <ul>
              <% flash[:failure_reasons].each do |reason| %>
              <li><%= reason %></li>
              <% end %>
            </ul>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
